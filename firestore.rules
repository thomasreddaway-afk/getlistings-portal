rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isStaff() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff'];
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function canAccessLead(leadData) {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      // Admin can access all
      return userData.role == 'admin' ||
        // Agent can access their own leads
        (userData.role == 'agent' && leadData.assigned_agent_id == request.auth.uid) ||
        // Staff can access linked agents' leads
        (userData.role == 'staff' && leadData.assigned_agent_id in userData.linked_agent_ids);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isStaff());
      allow create: if isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Leads collection
    match /leads/{leadId} {
      allow read: if isAuthenticated() && canAccessLead(resource.data);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && canAccessLead(resource.data);
      allow delete: if isAdmin();
    }
    
    // Properties collection
    match /properties/{propertyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Opportunities collection
    match /opportunities/{opportunityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Activities collection
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Activities are immutable (no update/delete)
    }
    
    // Raw leads collection (webhook storage)
    match /raw_leads/{rawLeadId} {
      // Only server (admin SDK) should access this
      allow read, write: if false;
    }
    
    // Config collection (admin only for writes)
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Imports collection (admin only)
    match /imports/{importId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
