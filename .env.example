# Environment Variables for Get Listings Portal
# Copy this file to .env.local and fill in the values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL - use localhost for local development/testing
# NEXT_PUBLIC_API_URL=http://localhost:3200/v1

# Production API (default if not set)
# NEXT_PUBLIC_API_URL=https://prop.deals/v1

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase Client SDK (public - exposed to browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (server-side only - NEVER expose)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# =============================================================================
# FACEBOOK INTEGRATION
# =============================================================================

# Facebook App credentials for Lead Ads webhook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_VERIFY_TOKEN=your_custom_verify_token_for_webhook

# Facebook Page Access Token (long-lived)
# Used to fetch full lead data from Lead Ads
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token

# =============================================================================
# GOOGLE SHEETS INTEGRATION (for migration)
# =============================================================================

# Google Cloud service account for Sheets API access
GOOGLE_SHEETS_CLIENT_EMAIL=sheets-reader@your_project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# =============================================================================
# GOOGLE MAPS / PLACES API
# =============================================================================

# Google Maps API Key (for suburb autocomplete)
# Enable Places API in Google Cloud Console
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WEBHOOK_PER_MINUTE=10000
RATE_LIMIT_API_PER_MINUTE=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features for gradual rollout
NEXT_PUBLIC_FEATURE_EXCLUSIVE_LEADS=true
NEXT_PUBLIC_FEATURE_SHEETS_IMPORT=true
NEXT_PUBLIC_FEATURE_AUTOMATION_RULES=false

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Set to 'true' to use Firebase emulators
USE_FIREBASE_EMULATOR=false
FIREBASE_EMULATOR_HOST=localhost

# Debug mode
DEBUG_MODE=false
